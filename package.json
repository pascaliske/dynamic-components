{
  "name": "dynamic-components",
  "description": "Easier dynamic component injections in Angular 6+.",
  "version": "1.0.3",
  "license": "MIT",
  "author": {
    "name": "Pascal Iske",
    "email": "info@pascal-iske.de",
    "url": "https://pascal-iske.de"
  },
  "repository": {
    "url": "https://github.com/pascaliske/dynamic-components.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/pascaliske/dynamic-components/issues"
  },
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve dynamic-components-demo",
    "build": "ng build",
    "postbuild": "cp README.md dist/dynamic-components/README.md && cp LICENSE.md dist/dynamic-components/LICENSE.md",
    "lint": "ng lint",
    "format": "prettier --write \"{src,projects}/**/*.ts\"",
    "link": "yarn run build && cd dist/dynamic-components && yarn link",
    "unlink": "cd dist/dynamic-components && yarn unlink"
  },
  "greenkeeper": {
    "ignore": [
      "typescript"
    ]
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,projects}/**/*.ts": [
      "yarn run lint",
      "yarn run format",
      "git add"
    ]
  },
  "dependencies": {
    "@angular/animations": "^7.2.0",
    "@angular/common": "^7.2.0",
    "@angular/compiler": "^7.2.0",
    "@angular/core": "^7.2.0",
    "@angular/forms": "^7.2.0",
    "@angular/http": "^7.2.0",
    "@angular/platform-browser": "^7.2.0",
    "@angular/platform-browser-dynamic": "^7.2.0",
    "@angular/router": "^7.2.0",
    "core-js": "^2.6.1",
    "rxjs": "^6.3.3",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.12.0",
    "@angular-devkit/build-ng-packagr": "~0.12.1",
    "@angular/cli": "~7.2.0",
    "@angular/compiler-cli": "^7.2.0",
    "@angular/language-service": "^7.2.0",
    "@types/lodash-es": "^4.17.1",
    "@types/node": "~10.12.18",
    "codelyzer": "~4.5.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "ng-packagr": "^4.4.5",
    "prettier": "^1.15.3",
    "rxjs-tslint-rules": "^4.14.3",
    "ts-node": "~8.0.2",
    "tsickle": "^0.34.0",
    "tslib": "^1.9.3",
    "tslint": "~5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "~3.1.6"
  }
}
