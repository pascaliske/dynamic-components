{
  "name": "dynamic-components",
  "description": "Easier dynamic component injections in Angular 6+.",
  "version": "1.0.4",
  "license": "MIT",
  "author": {
    "name": "Pascal Iske",
    "email": "info@pascal-iske.de",
    "url": "https://pascal-iske.de"
  },
  "repository": {
    "url": "https://github.com/pascaliske/dynamic-components.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/pascaliske/dynamic-components/issues"
  },
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve dynamic-components-demo",
    "build": "ng build --prod",
    "postbuild": "cp README.md dist/dynamic-components/README.md && cp LICENSE.md dist/dynamic-components/LICENSE.md && cp CHANGELOG.md dist/dynamic-components/CHANGELOG.md",
    "lint": "ng lint",
    "format": "prettier --write \"{src,projects}/**/*.ts\"",
    "changelog": "standard-changelog --release-count 1",
    "link": "yarn run build && cd dist/dynamic-components && yarn link",
    "unlink": "cd dist/dynamic-components && yarn unlink"
  },
  "greenkeeper": {
    "ignore": [
      "typescript"
    ]
  },
  "dependencies": {
    "@angular/animations": "^7.2.3",
    "@angular/common": "^7.2.3",
    "@angular/compiler": "^7.2.3",
    "@angular/core": "^7.2.3",
    "@angular/forms": "^7.2.3",
    "@angular/http": "^7.2.3",
    "@angular/platform-browser": "^7.2.3",
    "@angular/platform-browser-dynamic": "^7.2.3",
    "@angular/router": "^7.2.3",
    "core-js": "^3.0.0",
    "rxjs": "^6.4.0",
    "zone.js": "^0.8.29"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular-devkit/build-ng-packagr": "~0.13.0",
    "@angular/cli": "~7.3.0",
    "@angular/compiler-cli": "^7.2.3",
    "@angular/language-service": "^7.2.3",
    "@commitlint/cli": "^7.5.0",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/lodash-es": "^4.17.1",
    "@types/node": "~12.0.0",
    "codelyzer": "~4.5.0",
    "husky": "^2.0.0",
    "lint-staged": "^8.1.1",
    "ng-packagr": "^5.0.1",
    "prettier": "^1.16.3",
    "rxjs-tslint-rules": "^4.16.2",
    "standard-changelog": "^2.0.6",
    "ts-node": "~8.1.0",
    "tsickle": "^0.35.0",
    "tslib": "^1.9.3",
    "tslint": "~5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "~3.2.2"
  }
}
